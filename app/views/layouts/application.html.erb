<!DOCTYPE html>
<html>
  <head>
    <title>PinterestClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to "Create Post", new_post_path %>
      <br>
      Signed in as <%= current_user.name %> | <%= link_to ("Log Out"), logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
      <%= link_to "Sign in with Google", "/auth/google_oauth2" %>
    <% end %>

    <%= yield %>
  </body>
</html>
