<br>
<%= @post.caption %>
<br>
<%= image_tag(@post.photo.url) %>

<br>


<% if @current_vote.any? == false %>
  <%= form_with url: create_vote_path do |vote| %>
    <%= vote.submit :vote, value: "Like" %><br>
    <%= @votes.length %><br>
  <% end %>
<% else %>
  <%= form_with url: destroy_vote_path do |vote| %>
    <%= vote.submit :vote, value: "Liked", method: :delete %><br>
    <%= @votes.length %><br>
    <% end %>
<% end %>

<br>
<%= link_to "Back", '/' %>
